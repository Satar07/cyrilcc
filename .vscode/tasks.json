{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build"
            ]
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j8"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Meson: setup build",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "build"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Meson: test",
            "type": "shell",
            "command": "meson",
            "args": [
                "test",
                "-C",
                "build"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Meson: compile",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "build"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./build/cyrilcc",
            "args": [
                "test/optimized/loop.m",
                "-o",
                "build/out.s"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "./test.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "problemMatcher": []
        }
    ]
}