{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build"
            ]
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j8"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Meson: setup build",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup",
                "build"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Meson: compile",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C",
                "build"
            ],
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "./cyrilcc",
            "args": [
                "arg1",
                "arg2"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ]
        }
    ]
}
